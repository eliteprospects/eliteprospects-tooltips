<div class="epContent">
    {{#if imageUrl }}
        <div class="epPhoto">
            <img src="http://files.eliteprospects.com/layout/staffs/{{ imageUrl }}"/>
        </div>
    {{/if}}
    <div class="epName">
        {{#if country }}
            <img src="http://beta.eliteprospects.com/images/flags/32/{{ country.iso3166_3 }}.png"/>
        {{/if}}
        {{ firstName }} {{ lastName }}
    </div>
    <div class="epData">
        <table>
            <tbody>
                <tr>
                    <td>Team:</td>
                    <td>
                        {{#if isActive }}
                            {{ latestStaffStats.team.name }}
                        {{else}}
                            <em>{{ status }}</em>
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td>Nation:</td>
                    <td>{{ifnotempty country.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="epData">
        <table>
            <tbody>
                <tr>
                    <td>Birthplace:</td>
                    <td>
                        {{ifnotempty birthPlace.name }}{{#if birthPlace.country}}, {{ birthPlace.country.abbreviation }}{{/if}}
                    </td>
                </tr>
                <tr>
                    <td>Birthday:</td>
                    <td class="epNoWrap">{{ifnotempty dateOfBirth }}</td>
                </tr>
                <tr>
                    <td>Age:</td>
                    <td>{{ifnotempty age}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="epFooter">
         Click for full staff profile.
        <div class="epBrandLogo"></div>
    </div>
</div>
